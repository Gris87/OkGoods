<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.okmarket.okgoods">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.MainActivity"
            tools:ignore="UnusedAttribute">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />

        </activity>

        <activity
            android:name=".activities.SelectShopActivity"
            android:label="@string/title_activity_select_shop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.PhotoViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:immersive="true"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".activities.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="UnusedAttribute">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />

        </activity>

        <activity
            android:name=".activities.HistoryDetailsActivity"
            android:label="@string/title_activity_history_details"
            android:parentActivityName=".activities.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="UnusedAttribute">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HistoryActivity" />

        </activity>

        <activity
            android:name=".activities.GoodsCatalogActivity"
            android:label="@string/title_activity_goods_activity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
